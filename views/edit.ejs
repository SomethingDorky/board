<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= post.title %></div>
    
    <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="post[image_link]" value="<%= post.image_link %>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="post[body]"><%= post.body %></textarea>
        </div>
        <div class="extra">
            <a class="ui basic green button" href="/posts/<%= post._id %>">
                <i class="icon undo"></i>
                Back
            </a>
            <button class="ui right floated basic orange button" type="submit">
                <i class="icon save"></i>
                Save Changes
            </button>
        </div>
    </form>
</div>

<% include partials/footer %>