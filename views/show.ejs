<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.image_link %>">
            <div class="content">
                <span><%= post.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- post.body %></p>
            </div>
            <form id="delete" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <a class="ui basic green button" href="/posts">
                    <i class="icon undo"></i>
                    Back
                </a>
                <a class="ui orange basic button" href="/posts/<%= post._id %>/edit">
                    <i class="icon edit"></i>
                    Edit
                </a>
                <button class="ui right floated red basic button">
                    <i class="icon remove"></i>
                    Delete
                </button>
                
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>