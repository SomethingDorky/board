<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    
    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" placeholder="Post Title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="post[image_link]" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="post[body]"></textarea>
        </div>
        <div class="field">
            <input class="ui orange big basic button" type="submit">
        </div>
    </form>
</div>

<% include partials/footer %>